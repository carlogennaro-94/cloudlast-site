.page {
  display: grid;
  gap: 32px;
}

.page-hero {
  max-width: 720px;
}

.page-title {
  margin: 0 0 16px;
  font-size: clamp(2rem, 3vw, 2.75rem);
  letter-spacing: -0.02em;
}

.page-lead {
  margin: 0;
  color: var(--text-muted);
  font-size: 1.05rem;
}

.panel {
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 32px;
}

.panel-title {
  margin: 0 0 12px;
  font-size: 1.2rem;
}

.panel-text {
  margin: 0;
  color: var(--text-muted);
}

.list {
  margin: 0;
  padding-left: 18px;
  color: var(--text-muted);
}

.list li + li {
  margin-top: 8px;
}
